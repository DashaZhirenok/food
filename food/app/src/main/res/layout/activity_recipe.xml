<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/food44"
    android:weightSum="1">
    <include layout="@layout/toolbar" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="Recipes"
        android:textColor="#ffffff"
        android:background="#d7003735" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_of_dish"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@color/color_ettext"
        android:hint="Please, type &quot;Name of dish&quot;"
        android:textSize="26dp"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="260dp"
        android:id="@+id/text_of_recipe"
        android:background="@color/color_ettext"
        android:hint="Text of recipe..."
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_below="@+id/name_of_dish"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btnAdd2"
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:drawableTop="@drawable/ic_add"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@color/color_button">
        </Button>

        <Button
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:id="@+id/btnDelete2"
            android:drawableTop="@drawable/ic_clear"
            android:background="@color/color_button"
            android:layout_alignTop="@+id/btnAdd2"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>
</TableLayout>
