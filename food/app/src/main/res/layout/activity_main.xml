<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:background="@drawable/food44"
    android:weightSum="1">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="List of products"
        android:textColor="#ffffff"
        android:background="#d7003735" />


    <!-- первая таблица -->

        <EditText
            android:id="@+id/etNameofdish"
            android:hint="Name of dish"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp"
            android:background="@color/color_ettext"
            android:textSize="24dp">
        </EditText>

    <EditText
        android:id="@+id/etMealtime"
        android:hint="Mealtime"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:background="@color/color_ettext"
        android:textSize="24dp">
    </EditText>

    <EditText
        android:id="@+id/etCategory"
        android:hint="Category"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:background="@color/color_ettext"
        android:textSize="24dp">
    </EditText>

    <!-- вторая таблица -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <EditText
        android:id="@+id/etIngredients1"
        android:hint="Ingredients"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_width="259dp"
        android:layout_height="32dp"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:background="@color/color_ettext"
        android:textSize="24dp">
    </EditText>
    <EditText
        android:id="@+id/etPrice1"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:textColor="#ffffff"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:hint="price"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/color_ettext"
        android:textSize="24dp"
        android:layout_column="47" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/etIngredients2"
            android:hint="Ingredients"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:layout_width="259dp"
            android:layout_height="32dp"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp"
            android:background="@color/color_ettext"
            android:textSize="24dp">
        </EditText>
        <EditText
            android:id="@+id/etPrice2"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:textColor="#ffffff"
            android:hint="price"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/color_ettext"
            android:textSize="24dp"
            android:layout_column="47" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/etIngredients3"
            android:hint="Ingredients"
            android:layout_width="259dp"
            android:layout_height="32dp"
            android:textColor="#ffffff"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="10dp"
            android:background="@color/color_ettext"
            android:textSize="24dp">
        </EditText>
        <EditText
            android:id="@+id/etPrice3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:hint="price"
            android:layout_marginTop="10dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="10dp"
            android:background="@color/color_ettext"
            android:textSize="24dp"
            android:layout_column="47" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/etIngredients4"
            android:hint="Ingredients"
            android:layout_width="259dp"
            android:layout_height="32dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp"
            android:background="@color/color_ettext"
            android:textSize="24dp">
        </EditText>
        <EditText
            android:id="@+id/etPrice4"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:textColor="#ffffff"
            android:hint="price"
            android:layout_marginTop="10dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="10dp"
            android:background="@color/color_ettext"
            android:textSize="24dp"
            android:layout_column="47" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/etIngredients5"
            android:hint="Ingredients"
            android:layout_width="259dp"
            android:layout_height="32dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp"
            android:background="@color/color_ettext"
            android:textSize="24dp">
        </EditText>
        <EditText
            android:id="@+id/etPrice5"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:textColor="#ffffff"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:hint="price"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/color_ettext"
            android:textSize="24dp"
            android:layout_column="47" />
    </TableRow>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="260dp"
            android:id="@+id/text_of_recipe"
            android:background="@color/color_ettext"
            android:hint="Text of recipe..."
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/imageView2"
            android:layout_alignParentTop="true"
            android:background="@color/color_button" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:drawableStart="@drawable/ic_add"
            android:background="#00ffffff"
            android:layout_marginStart="37dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
        </Button>

        <Button
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:id="@+id/btnDelete"
            android:drawableEnd="@drawable/ic_clear"
            android:background="#00ffffff"
            android:layout_marginEnd="37dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:id="@+id/button"
            android:drawableEnd="@drawable/ic_clear_strings"
            android:background="#00ffffff"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

</TableLayout>
    </ScrollView>