<?xml version="1.0" encoding="utf-8"?>
<TableLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/food44"
    android:weightSum="1">
    <include layout="@layout/toolbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="List of products"
        android:textColor="#ffffff"
        android:background="#d7003735" />

    <!-- первая таблица -->

        <EditText
            android:id="@+id/etNameofdish"
            android:hint="Name of dish"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp"
            android:background="@color/color_ettext"
            android:textSize="24dp">
        </EditText>

    <EditText
        android:id="@+id/etMealtime"
        android:hint="Mealtime"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:background="@color/color_ettext"
        android:textSize="24dp">
    </EditText>

    <EditText
        android:id="@+id/etCategory"
        android:hint="Category"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:background="@color/color_ettext"
        android:textSize="24dp">
    </EditText>

    <!-- вторая таблица -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <EditText
        android:id="@+id/etIngredients1"
        android:hint="Ingredients"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_width="259dp"
        android:layout_height="32dp"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:background="@color/color_ettext"
        android:textSize="24dp">
    </EditText>
    <EditText
        android:id="@+id/etPrice1"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:textColor="#ffffff"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:hint="price"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/color_ettext"
        android:textSize="24dp"
        android:layout_column="47" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/etIngredients2"
            android:hint="Ingredients"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:layout_width="259dp"
            android:layout_height="32dp"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp"
            android:background="@color/color_ettext"
            android:textSize="24dp">
        </EditText>
        <EditText
            android:id="@+id/etPrice2"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:textColor="#ffffff"
            android:hint="price"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/color_ettext"
            android:textSize="24dp"
            android:layout_column="47" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/etIngredients3"
            android:hint="Ingredients"
            android:layout_width="259dp"
            android:layout_height="32dp"
            android:textColor="#ffffff"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="10dp"
            android:background="@color/color_ettext"
            android:textSize="24dp">
        </EditText>
        <EditText
            android:id="@+id/etPrice3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:hint="price"
            android:layout_marginTop="10dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="10dp"
            android:background="@color/color_ettext"
            android:textSize="24dp"
            android:layout_column="47" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/etIngredients4"
            android:hint="Ingredients"
            android:layout_width="259dp"
            android:layout_height="32dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp"
            android:background="@color/color_ettext"
            android:textSize="24dp">
        </EditText>
        <EditText
            android:id="@+id/etPrice4"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:textColor="#ffffff"
            android:hint="price"
            android:layout_marginTop="10dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="10dp"
            android:background="@color/color_ettext"
            android:textSize="24dp"
            android:layout_column="47" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/etIngredients5"
            android:hint="Ingredients"
            android:layout_width="259dp"
            android:layout_height="32dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp"
            android:background="@color/color_ettext"
            android:textSize="24dp">
        </EditText>
        <EditText
            android:id="@+id/etPrice5"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:textColor="#ffffff"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:hint="price"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/color_ettext"
            android:textSize="24dp"
            android:layout_column="47" />
    </TableRow>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btnAdd"
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:drawableTop="@drawable/ic_add"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@color/color_button">
        </Button>

        <Button
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:id="@+id/btnDelete"
            android:drawableTop="@drawable/ic_clear"
            android:background="@color/color_button"
            android:layout_alignTop="@+id/btnAdd"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

</TableLayout>